<% include ../../partials/header %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
        <form action="/debts" method="POST">
          <div class="card text-center default-margin default-padding">
            <div class="card-header main-color-bg"><h4>Add New Debt</h4></div>
            <input class="form-control text-center form-control-lg" type="text" name="debt[name]" placeholder="Name of Debt" required>
            <input class="form-control text-center form-control-lg" type="text" name="debt[owed]" placeholder="Amount Owed" required>
            <input class="form-control text-center form-control-lg" type="text" name="debt[amountPaid]" placeholder="Amount Paid" required>
            <button class="main-btn" type="submit">Submit</button>
          </div>
        </form>
    </div>
  </div>
</div>

<% include ../../partials/footer %>