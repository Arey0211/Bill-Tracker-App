<% include ../../partials/header %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
        <form action="/debts/<%= debt._id %>?_method=PUT" method="POST">
          <div class="card text-center default-margin default-padding">
            <div class="card-header main-color-bg"><h4>Edit <%= debt.name %> </h4></div>
            <input class="form-control text-center form-control-lg" type="text" name="debt[name]" value=" <%= debt.name %> " required>
            <input class="form-control text-center form-control-lg" type="text" name="debt[owed]" value=" <%= debt.owed %> " required>
            <input class="form-control text-center form-control-lg" type="text" name="debt[amountPaid]" value=" <%= debt.amountPaid %> " required>
            <button class="main-btn" type="submit">Submit</button>
          </div>
        </form>
    </div>
  </div>
</div>

<% include ../../partials/footer %>